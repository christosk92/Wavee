<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:animatedVisualPlayer="using:Wavee.UI.WinUI.Behaviors.AnimatedVisualPlayer"
                    xmlns:animatedVisuals="using:AnimatedVisuals"
                    xmlns:common="using:Wavee.UI.WinUI.Views.Common"
                    xmlns:common1="using:Wavee.UI.WinUI.Behaviors.common"
                    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                    xmlns:local="using:Wavee.UI.WinUI"
                    xmlns:system="using:System">

    <Style TargetType="common:WaveeTrackHost">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="common:WaveeTrackHost">
                    <Border HorizontalAlignment="Stretch"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentControl HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Content="{TemplateBinding MainContent}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
