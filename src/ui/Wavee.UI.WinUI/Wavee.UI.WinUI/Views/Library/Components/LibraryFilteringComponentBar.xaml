<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="Wavee.UI.WinUI.Views.Library.Components.LibraryFilteringComponentBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             DataContext="{x:Bind Component}"
             IsEnabled="{x:Bind Negate(Component.IsBusy), Mode=OneWay}"
             mc:Ignorable="d">
    <UserControl.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </UserControl.Transitions>
    <Grid>
        <CommandBar Padding="0"
                    Background="Transparent"
                    DefaultLabelPosition="Right"
                    IsOpen="False">
            <AppBarElementContainer VerticalAlignment="Center">
                <AutoSuggestBox MinWidth="140"
                                PlaceholderText="Filter..."
                                QueryIcon="Find"
                                Text="{x:Bind Component.Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                UpdateTextOnSelect="False" />
            </AppBarElementContainer>
            <AppBarElementContainer Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                <ComboBox MinWidth="75"
                          ItemsSource="{x:Bind Component.AvailableSortingOptions, Mode=OneWay}"
                          PlaceholderText="Sorting"
                          SelectedItem="{x:Bind Component.SelectedSorting, Mode=TwoWay}" />
            </AppBarElementContainer>

        </CommandBar>
    </Grid>
</UserControl>
